<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interview Predictor</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        
        .container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            padding: 40px;
            max-width: 800px;
            width: 100%;
        }
        
        h1 {
            text-align: center;
            color: #667eea;
            margin-bottom: 10px;
            font-size: 2em;
        }
        
        .subtitle {
            text-align: center;
            color: #666;
            margin-bottom: 30px;
        }
        
        .tabs {
            display: flex;
            gap: 10px;
            margin-bottom: 30px;
            border-bottom: 2px solid #eee;
        }
        
        .tab {
            padding: 15px 25px;
            background: none;
            border: none;
            cursor: pointer;
            font-size: 16px;
            color: #666;
            border-bottom: 3px solid transparent;
            transition: all 0.3s;
        }
        
        .tab.active {
            color: #667eea;
            border-bottom-color: #667eea;
            font-weight: bold;
        }
        
        .tab-content {
            display: none;
        }
        
        .tab-content.active {
            display: block;
        }
        
        .model-guide {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
        }
        
        .model-option {
            margin-bottom: 10px;
            padding: 10px;
            background: white;
            border-radius: 8px;
            font-size: 14px;
        }
        
        .upload-area {
            border: 3px dashed #667eea;
            border-radius: 15px;
            padding: 40px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
            margin-bottom: 20px;
        }
        
        .upload-area:hover {
            background: rgba(102, 126, 234, 0.1);
        }
        
        .file-info {
            margin: 10px 0;
            color: #666;
        }
        
        .model-select {
            margin: 20px 0;
        }
        
        .model-select select {
            width: 100%;
            padding: 12px;
            border: 2px solid #ddd;
            border-radius: 10px;
            font-size: 16px;
        }
        
        .analyze-btn {
            width: 100%;
            padding: 15px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.3s;
            margin: 20px 0;
        }
        
        .analyze-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
        }
        
        .analyze-btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }
        
        .progress-container {
            display: none;
            margin: 20px 0;
        }
        
        .progress-bar {
            width: 100%;
            height: 20px;
            background: #f0f0f0;
            border-radius: 10px;
            overflow: hidden;
            position: relative;
        }
        
        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
            width: 0%;
            transition: width 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            font-size: 12px;
        }
        
        .progress-message {
            text-align: center;
            margin-top: 10px;
            color: #666;
        }
        
        .spinner-container {
            display: none;
            text-align: center;
            margin: 20px 0;
        }
        
        .spinner {
            border: 4px solid #f3f3f3;
            border-radius: 50%;
            border-top: 4px solid #667eea;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 0 auto 10px;
        }
        
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        textarea {
            width: 100%;
            min-height: 300px;
            padding: 15px;
            border: 2px solid #ddd;
            border-radius: 10px;
            font-family: inherit;
            font-size: 14px;
            resize: vertical;
        }
        
        .results {
            display: none;
            margin-top: 30px;
        }
        
        .score-card {
            background: linear-gradient(135deg, #ffeaa7 0%, #fab1a0 100%);
            padding: 20px;
            border-radius: 15px;
            text-align: center;
            margin-bottom: 20px;
        }
        
        .score {
            font-size: 2.5em;
            font-weight: bold;
            margin: 10px 0;
        }
        
        .prediction {
            font-size: 1.2em;
            margin-bottom: 5px;
        }
        
        .component-breakdown {
            margin-top: 20px;
        }
        
        .component {
            margin-bottom: 15px;
        }
        
        .component-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 5px;
            font-weight: bold;
        }
        
        .component-bar {
            width: 100%;
            height: 20px;
            background: #e9ecef;
            border-radius: 10px;
            overflow: hidden;
        }
        
        .component-fill {
            height: 100%;
            background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
            transition: width 0.5s;
        }
        
        .component-explanation {
            margin-top: 5px;
            color: #666;
            font-size: 14px;
            font-style: italic;
        }
        
        .timeline-section {
            margin: 30px 0;
            display: none;
        }
        
        .timeline-title {
            font-size: 20px;
            font-weight: bold;
            color: #667eea;
            margin-bottom: 15px;
            text-align: center;
        }
        
        .timeline-legend {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-bottom: 15px;
            font-size: 14px;
        }
        
        .legend-item {
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .legend-color {
            width: 15px;
            height: 15px;
            border-radius: 3px;
        }
        
        .timeline-container {
            display: flex;
            height: 50px;
            border-radius: 10px;
            overflow: hidden;
            margin-bottom: 10px;
            border: 2px solid #e9ecef;
        }
        
        .timeline-segment {
            transition: opacity 0.2s;
            cursor: pointer;
        }
        
        .timeline-segment:hover {
            opacity: 0.8;
        }
        
        .feedback-section {
            margin: 30px 0;
            display: none;
        }
        
        .feedback-title {
            font-size: 20px;
            font-weight: bold;
            color: #667eea;
            margin-bottom: 15px;
            text-align: center;
        }
        
        .feedback-btn {
            width: 100%;
            padding: 15px;
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.3s;
            margin-bottom: 20px;
        }
        
        .feedback-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(40, 167, 69, 0.4);
        }
        
        .feedback-btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }
        
        .feedback-loading {
            text-align: center;
            margin: 20px 0;
            color: #666;
            display: none;
        }
        
        .feedback-content {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            border-left: 4px solid #28a745;
            line-height: 1.6;
            display: none;
        }
        
        .feedback-content h4 {
            color: #667eea;
            margin: 15px 0 10px 0;
        }
        
        .feedback-content ul {
            margin: 10px 0;
            padding-left: 20px;
        }
        
        .feedback-content li {
            margin: 8px 0;
        }
.transcript-display { display: none !important; margin: 20px 0; padding: 20px; background: #f8f9fa; border-radius: 10px; border-left: 4px solid #667eea; }

@keyframes fadeIn {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
}

.transcript-display.show { display: block !important; visibility: visible !important; opacity: 1 !important; }

.transcript-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
    padding-bottom: 10px;
    border-bottom: 2px solid #dee2e6;
}

.transcript-time {
    font-weight: 600;
    font-size: 18px;
    color: #333;
}

.transcript-score {
    padding: 6px 12px;
    border-radius: 6px;
    font-weight: 600;
    color: white;
}

.transcript-score.green { background: #28a745; }
.transcript-score.yellow { background: #ffc107; color: #333; }
.transcript-score.red { background: #dc3545; }

.transcript-text {
    min-height: 60px;
    background: white;
    padding: 15px;
    border-radius: 8px;
    line-height: 1.8;
    font-size: 15px;
    color: #333;
    max-height: 300px;
    overflow-y: auto;
}

.transcript-meta {
    margin-top: 10px;
    font-size: 13px;
    color: #666;
    font-style: italic;
}
</style>
    </style>
<style>
/* Force transcript child visibility */
.transcript-display.show * {
    visibility: visible !important;
    opacity: 1 !important;
}

.transcript-display.show .transcript-time,
.transcript-display.show .transcript-score,
.transcript-display.show .transcript-text,
.transcript-display.show .transcript-meta {
    display: block !important;
}

.transcript-display.show .transcript-header {
    display: flex !important;
}

/* Ensure min height so empty text still shows something */
.transcript-text {
    min-height: 80px !important;
}
</style>
</head>
<body>
    <div class="container">
        <h1>Interview Success Predictor</h1>
        <p class="subtitle">AI-powered analysis of interview performance</p>
        
        <div class="tabs">
            <button class="tab active" onclick="switchTab('audio')">Audio Analysis</button>
            <button class="tab" onclick="switchTab('transcript')">Transcript Analysis</button>
        </div>
        
        <div id="audio-tab" class="tab-content active">
            <div class="model-guide">
                <h4>Model Selection Guide:</h4>
                <div id="model-guide-content">Loading model information...</div>
            </div>
            
            <div class="upload-area" onclick="document.getElementById('audioFile').click()">
                <div>Click to upload audio file</div>
                <div class="file-info">Supported formats: MP3, WAV, M4A, OGG (Max 200MB)</div>
            </div>
            <input type="file" id="audioFile" accept=".mp3,.wav,.m4a,.ogg" style="display: none;">
            <div class="file-info" id="fileInfo"></div>
            
            <div class="model-select">
                <label>Select Whisper Model:</label>
                <select id="modelSelect">
                    <option value="tiny">Tiny - Fastest (5 min for 80MB)</option>
                    <option value="base" selected>Base (Recommended) - 5-8 min for 30min audio</option>
                    <option value="small">Small (High Accuracy) - 10-15 min for 30min audio</option>
                    <option value="medium">Medium (Maximum Accuracy) - 20-30 min for 30min audio</option>
                </select>
            </div>
            
            <button class="analyze-btn" id="analyzeAudioBtn" onclick="analyzeAudio()" disabled>
                Analyze Interview
            </button>
            
            <div class="progress-container" id="progressContainer" style="display:none;">
                <div class="progress-bar">
                    <div class="progress-fill" id="progressFill">0%</div>
                </div>
                <p class="progress-message" id="progressMessage">Initializing...</p>
            </div>
        </div>
        
        <div id="transcript-tab" class="tab-content">
            <textarea id="transcriptText" placeholder="Paste your interview transcript here..."></textarea>
            <button class="analyze-btn" id="analyzeTextBtn" onclick="analyzeText()" style="margin-top: 20px;">
                Analyze Transcript
            </button>
            
            <div class="spinner-container" id="spinnerContainer">
                <div class="spinner"></div>
                <p class="spinner-message">Analyzing transcript...</p>
            </div>
        </div>
        
        <div class="results" id="results"></div>
        
        <div class="timeline-section" id="timelineSection">
            <div class="timeline-title">Performance Timeline</div>

        <!-- Inline Transcript Display -->
        <div class="transcript-display" id="transcriptDisplay">
            <div class="transcript-header">
                <div class="transcript-time" id="transcriptTime">Select a timeline segment</div>
                <div class="transcript-score" id="transcriptScore"></div>
            </div>
            <div class="transcript-text" id="transcriptBody">
                Click any colored bar above to view the transcript for that time period.
            </div>
            <div class="transcript-meta" id="transcriptMeta"></div>
        </div>

            <div class="timeline-legend">
                <div class="legend-item">
                    <div class="legend-color" style="background: #28a745;"></div>
                    <span>Strong</span>
                </div>


                <div class="legend-item">
                    <div class="legend-color" style="background: #ffc107;"></div>
                    <span>Okay</span>
                </div>
                <div class="legend-item">
                    <div class="legend-color" style="background: #dc3545;"></div>
                    <span>Weak</span>
                </div>
            </div>
            <div class="timeline-container" id="timelineContainer"></div>
        </div>
        
        <div class="feedback-section" id="feedbackSection">
            <div class="feedback-title">AI Feedback & Tips</div>
            <button class="feedback-btn" id="generateFeedbackBtn" onclick="generateFeedback()" disabled>
                Generate AI Feedback
            </button>
            <div class="feedback-loading" id="feedbackLoading">
                <div class="spinner"></div>
                <p>Generating personalized feedback...</p>
            </div>
            <div class="feedback-content" id="feedbackContent"></div>
        </div>
    </div>
    
    <script>
        let selectedFile = null;
        let componentExplanations = {};
        let currentAnalysisData = null;
        let sse;
        
        fetch('/api/model-info')
            .then(r => r.json())
            .then(data => {
                componentExplanations = data.component_explanations || {};
                
                const guideHtml = (data.models || []).map(m => `
                    <div class="model-option">
                        <strong>${m.display}</strong><br>
                        <span>${m.size} | ${m.accuracy} | ${m.time_30min} (30min) | ${m.time_60min} (60min)</span><br>
                        <span>Best for: ${m.best_for}</span>
                    </div>
                `).join('');
                
                document.getElementById('model-guide-content').innerHTML = guideHtml || 'Model information unavailable';
            })
            .catch(e => {
                console.error('Error loading model info:', e);
                document.getElementById('model-guide-content').innerHTML = 'Unable to load model information';
            });
        
        function switchTab(tab) {
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(tc => tc.classList.remove('active'));
            
            document.querySelector(`#${tab}-tab`).classList.add('active');
            document.querySelector(`button[onclick="switchTab('${tab}')"]`).classList.add('active');
        }
        
        document.getElementById('audioFile').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                selectedFile = file;
                document.getElementById('fileInfo').textContent = 
                    `Selected: ${file.name} (${(file.size / 1024 / 1024).toFixed(1)} MB)`;
                document.getElementById('analyzeAudioBtn').disabled = false;
            }
        });
        
        function startProgress(initialMsg = 'Initializing...') {
            const pc = document.getElementById('progressContainer');
            const pf = document.getElementById('progressFill');
            const pm = document.getElementById('progressMessage');
            pc.style.display = 'block';
            pf.style.width = '0%';
            pf.textContent = '0%';
            pm.textContent = initialMsg;
            console.log('[PROGRESS] Start:', initialMsg);
        }

        function updateProgress(percent, message) {
            const pf = document.getElementById('progressFill');
            const pm = document.getElementById('progressMessage');
            const clamped = Math.max(0, Math.min(100, Math.round(percent)));
            pf.style.width = clamped + '%';
            pf.textContent = clamped + '%';
            if (message) pm.textContent = message;
            console.log(`[PROGRESS] ${clamped}% - ${message || ''}`);
        }

        function finishProgress() {
            console.log('[PROGRESS] Finished.');
            updateProgress(100, 'Complete!');
            setTimeout(() => {
                document.getElementById('progressContainer').style.display = 'none';
            }, 800);
        }

        function bindSSEProgress() {
            try {
                if (sse) sse.close();
                sse = new EventSource('/api/progress');
                sse.onmessage = (ev) => {
                    try {
                        const p = JSON.parse(ev.data);
                        if (typeof p.percent === 'number') {
                            updateProgress(p.percent, p.message || 'Processing...');
                        } else if (p.stage) {
                            const map = { upload_complete: 35, transcribing: 50, nlp: 65, timeline: 80, scoring: 90 };
                            updateProgress(map[p.stage] || 60, (p.message || p.stage) + '...');
                        }
                    } catch {
                        console.warn('[SSE] Unparsable event:', ev.data);
                    }
                };
                sse.onerror = (err) => { console.warn('[SSE] Stream closed:', err); sse.close(); };
            } catch (e) {
                console.warn('[SSE] Not supported:', e);
            }
        }
        
        function analyzeAudio() {
            if (!selectedFile) return;
            
            const formData = new FormData();
            formData.append('file', selectedFile);
            formData.append('model_size', document.getElementById('modelSelect').value);
            
            document.getElementById('analyzeAudioBtn').disabled = true;
            
            startProgress('Uploading audio...');
            // bindSSEProgress();

            const xhr = new XMLHttpRequest();
            xhr.open('POST', '/api/analyze-audio', true);

            xhr.upload.onprogress = (e) => {
                if (e.lengthComputable) {
                    const pct = Math.min(35, Math.round((e.loaded / e.total) * 35));
                    updateProgress(pct, 'Uploading audio...');
                }
            };
            xhr.onloadstart = () => updateProgress(2, 'Starting upload...');

            const tick = setInterval(() => {
                const pf = document.getElementById('progressFill');
                const current = parseInt(pf.textContent) || 0;
                if (current < 95) {
                    const next = current + (current < 50 ? 2 : 1);
                    updateProgress(
                        next,
                        current < 50 ? 'Transcribing audio...' :
                        current < 70 ? 'Running NLP analysis...' :
                        current < 85 ? 'Creating performance timeline...' :
                                       'Calculating interview score...'
                    );
                }
            }, 1200);

            xhr.onerror = () => {
                clearInterval(tick);
                if (sse) sse.close();
                finishProgress();
                document.getElementById('analyzeAudioBtn').disabled = false;
                alert('Error: Failed to send request.');
            };

            xhr.onload = () => {
                clearInterval(tick);
                if (sse) sse.close();
                try {
                    const data = JSON.parse(xhr.responseText);
                    updateProgress(100, 'Complete!');
                    if (data.success) {
                        displayResults(data);
                    } else {
                        alert('Analysis failed: ' + (data.error || 'Unknown error'));
                    }
                } catch (e) {
                    console.error('[PARSE] Bad JSON:', e);
                    alert('Unexpected server response.');
                } finally {
                    finishProgress();
                    document.getElementById('analyzeAudioBtn').disabled = false;
                }
            };

            xhr.send(formData);
        }
        
        function analyzeText() {
            const text = document.getElementById('transcriptBody').value.trim();
            if (!text) {
                alert('Please enter a transcript');
                return;
            }
            
            document.getElementById('analyzeTextBtn').disabled = true;
            document.getElementById('spinnerContainer').style.display = 'block';
            
            const formData = new FormData();
            formData.append('text', text);
            
            fetch('/api/analyze-text', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    displayResults(data);
                } else {
                    alert('Analysis failed: ' + (data.error || 'Unknown error'));
                }
            })
            .catch(error => {
                alert('Error: ' + error.message);
            })
            .finally(() => {
                document.getElementById('analyzeTextBtn').disabled = false;
                document.getElementById('spinnerContainer').style.display = 'none';
            });
        }
        
        function displayResults(data) {
            const score = Math.round(data.score || 0);
            const prediction = data.prediction || 'Unknown';
            const confidence = data.confidence || 'Unknown';
            const components = data.component_scores || {};
            
            const resultHtml = `
                <div class="score-card">
                    <div class="prediction">${prediction}</div>
                    <div class="score">${score}%</div>
                    <div>Confidence: ${confidence}</div>
                </div>
                
                <div class="component-breakdown">
                    <h3>Component Breakdown</h3>
                    ${Object.entries(components).map(([key, value]) => `
                        <div class="component">
                            <div class="component-header">
                                <span>${key.toUpperCase()}: ${Math.round(value)}%</span>
                            </div>
                            <div class="component-bar">
                                <div class="component-fill" style="width: ${value}%"></div>
                            </div>
                            <div class="component-explanation">
                                ${componentExplanations[key] || 'Analysis component'}
                            </div>
                        </div>
                    `).join('')}
                </div>
            `;
            
            document.getElementById('results').innerHTML = resultHtml;
            document.getElementById('results').style.display = 'block';
            
            if (data.timeline) {
                displayTimeline(data.timeline);
            }
            
            currentAnalysisData = data;
            document.getElementById('feedbackSection').style.display = 'block';
            document.getElementById('generateFeedbackBtn').disabled = false;
        }
        
        function displayTimeline(timeline) {
            if (!timeline || !timeline.bins || timeline.bins.length === 0) {
                return;
            }
            
            const container = document.getElementById('timelineContainer');
            const section = document.getElementById('timelineSection');
            
            let html = '';
            timeline.bins.forEach(bin => {
                const width = ((bin.end - bin.start) / timeline.duration) * 100;
                const color = bin.color === 'green' ? '#28a745' : 
                             bin.color === 'yellow' ? '#ffc107' : '#dc3545';
                
                html += `<div class="timeline-segment" 
                             style="background: ${color}; width: ${width}%; height: 100%;" 
                             title="${bin.label}: ${bin.score}% (${bin.start.toFixed(1)}s - ${bin.end.toFixed(1)}s)">
                         </div>`;
            });
            
            container.innerHTML = html;
            section.style.display = 'block';
        }
        
        function generateFeedback() {
            if (!currentAnalysisData) {
                alert("No analysis data available for feedback");
                return;
            }
            
            document.getElementById("generateFeedbackBtn").disabled = true;
            document.getElementById("feedbackLoading").style.display = "block";
            document.getElementById("feedbackContent").style.display = "none";
            
            const formData = new FormData();
            formData.append("score", currentAnalysisData.score || 0);
            formData.append("prediction", currentAnalysisData.prediction || "Unknown");
            formData.append("sentiment", currentAnalysisData.component_scores?.sentiment || 0);
            formData.append("toxicity", currentAnalysisData.component_scores?.toxicity || 0);
            formData.append("competency", currentAnalysisData.component_scores?.competency || 0);
            formData.append("keywords", currentAnalysisData.component_scores?.keywords || 0);
            formData.append("transcript", currentAnalysisData.transcript || "");
            
            fetch("/api/generate-feedback", {
                method: "POST",
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    displayFeedback(data.feedback);
                } else {
                    alert("Feedback generation failed: " + (data.error || "Unknown error"));
                }
            })
            .catch(error => {
                alert("Error generating feedback: " + error.message);
            })
            .finally(() => {
                document.getElementById("generateFeedbackBtn").disabled = false;
                document.getElementById("feedbackLoading").style.display = "none";
            });
        }
        
        function displayFeedback(feedbackText) {
            let formattedFeedback = feedbackText
                .replace(/\*\*(.*?)\*\*/g, "<h4>$1</h4>")
                .replace(/â€¢ (.*?)(?=\n|$)/g, "<li>$1</li>")
                .replace(/(<li>.*<\/li>)/gs, "<ul>$1</ul>")
                .replace(/\n\n/g, "<br><br>")
                .replace(/\n/g, "<br>");
            
            document.getElementById("feedbackContent").innerHTML = formattedFeedback;
            document.getElementById("feedbackContent").style.display = "block";
        }

// === SPARKLINE CLICK HANDLER FOR TRANSCRIPT POPUPS ===
(function() {
  console.log('ðŸ”§ Installing sparkline click handlers...');
  
  // Store analysis data globally when results display
  window._lastAnalysisData = null;
  
  // Override displayResults to capture data
  const originalDisplayResults = window.displayResults;
  if (originalDisplayResults) {
    window.displayResults = function(data) {
      window._lastAnalysisData = data;
      console.log('ðŸ“¦ Stored analysis data:', {
        hasTimeline: !!data.timeline,
        hasSegments: !!data.segments,
        bins: data.timeline?.bins?.length || 0
      });
      return originalDisplayResults.call(this, data);
    };
  }
  
  // Function to show transcript popup for a timeline bin
  
  // Attach click handlers to timeline bars
  // Function to show transcript INLINE below timeline (no pop-up)
    window.showTranscriptInline = function(bin, segments) {
    console.log('ðŸ”§ showTranscriptInline called', { bin, segmentCount: segments?.length });
    
    if (!segments || segments.length === 0) {
      console.warn('âš ï¸ No segments available');
      return;
    }
    
    const binStart = parseFloat(bin.start || 0);
    const binEnd = parseFloat(bin.end || binStart);
    const score = Math.round(bin.score || 0);
    
    console.log(`ðŸ“Š Bin: ${binStart}s - ${binEnd}s, Score: ${score}%`);
    
    // Find matching segments
    const matchingSegments = segments.filter(seg => {
      const segStart = parseFloat(seg.start || 0);
      const segEnd = parseFloat(seg.end || segStart);
      return segEnd > binStart && segStart < binEnd;
    });
    
    console.log(`âœ… Found ${matchingSegments.length} matching segments`);
    
    const transcriptText = matchingSegments
      .map(seg => (seg.text || '').trim())
      .filter(t => t.length > 0)
      .join(' ');
    
    console.log(`ðŸ“ Transcript length: ${transcriptText.length} chars`);
    
    // Determine color
    let scoreColor = 'red';
    if (score >= 70) scoreColor = 'green';
    else if (score >= 40) scoreColor = 'yellow';
    
    // Get elements - with error checking
    const displayDiv = document.getElementById('transcriptDisplay');
    const timeDiv = document.getElementById('transcriptTime');
    const scoreDiv = document.getElementById('transcriptScore');
    const textDiv = document.getElementById('transcriptBody');
    const metaDiv = document.getElementById('transcriptMeta');
    
    if (!displayDiv) {
      console.error('âŒ transcriptDisplay not found');
      return;
    }
    if (!timeDiv || !scoreDiv || !textDiv || !metaDiv) {
      console.error('âŒ Child elements not found', { timeDiv, scoreDiv, textDiv, metaDiv });
      return;
    }
    
    console.log('âœ… All elements found');
    
    // Force update content with innerHTML to ensure it works
    const timeText = `Timeline: ${binStart.toFixed(1)}s â€“ ${binEnd.toFixed(1)}s`;
    const scoreText = `${score}%`;
    const metaText = `${matchingSegments.length} segment${matchingSegments.length !== 1 ? 's' : ''} â€¢ Duration: ${(binEnd - binStart).toFixed(1)}s`;
    const displayText = transcriptText && transcriptText.length > 5
      ? transcriptText
      : `<em style="color:#999">No transcript text available for this ${(binEnd - binStart).toFixed(1)}s segment.<br><br>This may be because:<br>â€¢ The segment is too short<br>â€¢ No speech was detected<br>â€¢ Audio quality issues</em>`;
    
    // Use innerHTML for guaranteed update
    timeDiv.innerHTML = timeText;
    scoreDiv.innerHTML = scoreText;
    scoreDiv.className = `transcript-score ${scoreColor}`;
    textDiv.innerHTML = displayText;
    metaDiv.innerHTML = metaText;
    
    console.log('âœ… Content updated:', { timeText, scoreText, textLength: displayText.length });
    
    // Force show
    displayDiv.classList.add('show');
    // FORCE VISIBILITY WITH INLINE STYLES - CANNOT BE HIDDEN
    displayDiv.style.cssText = 'display: block !important; visibility: visible !important; opacity: 1 !important; position: relative !important; height: auto !important; min-height: 150px !important; background: #f8f9fa !important; padding: 20px !important; margin: 20px 0 !important; border-left: 4px solid #667eea !important; border-radius: 10px !important; z-index: 100 !important;';
    
    timeDiv.style.cssText = 'display: block !important; visibility: visible !important; opacity: 1 !important; font-size: 18px !important; font-weight: 600 !important; color: #333 !important; margin-bottom: 10px !important;';
    
    scoreDiv.style.cssText = 'display: inline-block !important; visibility: visible !important; opacity: 1 !important; padding: 8px 16px !important; border-radius: 6px !important; font-weight: 700 !important; color: white !important;';
    
    textDiv.style.cssText = 'display: block !important; visibility: visible !important; opacity: 1 !important; background: white !important; padding: 16px !important; border-radius: 8px !important; min-height: 80px !important; font-size: 15px !important; color: #333 !important; line-height: 1.8 !important; margin: 15px 0 !important;';
    
    metaDiv.style.cssText = 'display: block !important; visibility: visible !important; opacity: 1 !important; font-size: 13px !important; color: #666 !important; margin-top: 10px !important;';
    displayDiv.style.display = 'block';
    
    console.log('âœ… Display shown, classList:', displayDiv.classList.toString());
    
    // Scroll to view
    setTimeout(() => {
      displayDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    }, 100);
  };

  window.attachTimelineClickHandlers = function() {
    const bars = document.querySelectorAll('#timelineContainer > .timeline-segment');
    console.log('ðŸ”— Found', bars.length, 'timeline bars');
    
    if (!window._lastAnalysisData) {
      console.warn('âš ï¸ No analysis data stored yet. Upload audio first.');
      return;
    }
    
    const bins = window._lastAnalysisData.timeline?.bins || [];
    const segments = window._lastAnalysisData.segments || [];
    
    if (bins.length === 0) {
      console.warn('âš ï¸ No timeline bins available');
      return;
    }
    
    bars.forEach((bar, idx) => {
      if (bins[idx]) {
        bar.style.cursor = 'pointer';
        bar.onclick = function(e) {
          e.stopPropagation();
          console.log('ðŸ–±ï¸ Bar', idx, 'clicked');
          showTranscriptInline(bins[idx], segments);
        };
      }
    });
    
    console.log('âœ… Click handlers attached to', bars.length, 'bars');
  };
  
  // Also override displayTimeline to auto-attach handlers
  const originalDisplayTimeline = window.displayTimeline;
  if (originalDisplayTimeline) {
    window.displayTimeline = function(timeline) {
      const result = originalDisplayTimeline.call(this, timeline);
      // Attach handlers after a short delay to ensure DOM is ready
      setTimeout(() => {
        window.attachTimelineClickHandlers();
      }, 100);
      return result;
    };
  }
  
  console.log('âœ… Sparkline click handler installed!');
  console.log('ðŸ’¡ Timeline bars are now clickable - upload audio to test');
})();

